@{
    ViewData["HideNavbar"] = true;
}

<head>
    <link href="~/css/login.css" rel="stylesheet" type="text/css"/>
    
</head>

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">

                <div >
                    <p class="h1 fw-bold mb-0"><span style="font-weight:300">Poly</span>Admin</p>
                </div>

                <div class="d-flex align-items-center h-custom-2 ">

                    <form style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="email" id="form2Example18" class="form-control form-control-lg" placeholder="Your Admin's username"/>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Password"/>
                        </div>

                        <div class="pt-1 mb-4">
                            <a class="btn btn-info btn-lg btn-block" asp-controller="Home" asp-action="Index">Login</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://www.polytechmonastir.tn/images/tz_educab/logo.png"
                     alt="Login image" class="w-100 vh-100" style="width:200px;height:300px">
            </div>
        </div>
    </div>
</section>