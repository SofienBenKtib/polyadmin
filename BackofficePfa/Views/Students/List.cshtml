@{
}
@model List<BackofficePfa.Models.Entities.Student>


<h1>Students :</h1>

<table class="table">
   <thead>
       <tr>
           <td>Full Name</td>
           <td>Email</td>
           <td>Section</td>
           <td>Action</td>
       </tr>
   </thead>
   <tbody>
       @foreach (var student in Model)
        {
           <tr>
               <td>@student.Name</td>
               <td>@student.Email</td>
               <td>@student.Section</td>
                <td><a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            </tr> 
        }
   </tbody>
</table>