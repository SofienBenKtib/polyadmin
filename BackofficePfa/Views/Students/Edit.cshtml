@{
}
@model BackofficePfa.Models.Entities.Student

@if(Model is null)
{
    <p>No student for this ID</p>
}
<h1>Edit Student</h1>
<form method="post" class="card p-md-3">
    <div class="mt-3">
        <label class="form-label" for="id">Id :</label>
        <input type="text" name="id" class="form-control mb-3" asp-for="Id" readonly/>
        <label class="form-label" for="name">Full Name :</label>
        <input type="text" name="name" placeholder="Full Name" class="form-control mb-3" asp-for="Name" />
        <label class="form-label" for="Email">Email :</label>
        <input type="email" name="Email" placeholder="JohnDoe@mail.com" class="form-control  mb-3" asp-for="Email" />
        <label class="form-label" for="Number">Phone Number :</label>
        <input type="text" name="Number" placeholder="54111000" class="form-control  mb-3" asp-for="Phone" />
        <label class="form-label" for="section">Section :</label>
        <select name="section" id="form-control" class="form-select  mb-3" asp-for="Section">
            <option value="">Please choose an option</option>
            <option value="Software Engineering">Software Engineering</option>
            <option value="Cloud & Devops">Cloud & DevOps</option>
            <option value="Mechanical Engineering">Mechanical Engineering</option>
            <option value="Preparatory Studies">Preparatory Studies</option>
        </select><br />
        <input type="submit" value="Save changes" class="form-control btn btn-success mb-1" />
        <button class="form-control btn btn-danger" asp-controller="Students" asp-action="Delete">Delete</button>
    </div>
</form>