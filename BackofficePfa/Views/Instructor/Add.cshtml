@model BackofficePfa.Models.AddInstructorViewModel

<h1>Add an Instructor/Professor</h1>

<form class="card p-md-3" method="post">
    <div class="mt-3">
        <label class="form-label">Full Name :</label>
        <input type="text" name="name" class="form-control mb-3" placeholder="Full Name" asp-for="Name"/>
        <label class="form-label">Email :</label>
        <input type="email" name="email" class="form-control mb-3" placeholder="JohnDoe@outlook.com" asp-for="Email" />
        <label class="form-label">Phone number :</label>
        <input type="text" name="phone" class="form-control mb-3" placeholder="12345678"  asp-for="Phone"/>
        <label class="form-label">Subject :</label>
        <select name="Subject" id="form-control" class="form-select  mb-3" asp-for="Subject">
            <option value="">Please choose an option</option>
            <option value="OOP">OOP</option>
            <option value="Angular">Angular</option>
            <option value="DevOps">DevOps</option>
            <option value="Design Patterns">Design Patterns</option>
            <option value="Algebra">Algebra</option>
            <option value="English">English</option>
            <option value="Design Patterns">Design Patterns</option>
            <option value="Python">Python</option>
            <option value="ASP.NET Core">ASP.NET Core</option>
            <option value="QA">QA</option>
        </select>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="flexCheckChecked" name="nightclasses">
            <label class="form-check-label" for="flexCheckChecked">
                Available for night classes and weekends
            </label>
        </div><br />
        <input type="submit" value="Add Instructor" class="form-control btn btn-success" />
    </div>
</form>