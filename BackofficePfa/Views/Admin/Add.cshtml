@model BackofficePfa.Models.AddAdminViewModel
<h1>
    Add Staff/Personnel
</h1>

<form class="card p-md-3" method="post">
    <div class="mt-3">
        <label class="form-label">Full Name :</label>
        <input type="text" name="name" class="form-control mb-3" placeholder="Full Name" asp-for="Name" />
        <label class="form-label">Email :</label>
        <input type="email" name="email" class="form-control mb-3" placeholder="JohnDoe@outlook.com" asp-for="Email" />
        <label class="form-label">Phone number :</label>
        <input type="text" name="phone" class="form-control mb-3" placeholder="12345678" asp-for="Phone" />
        <label class="form-label">Role :</label>
        <select name="Role" id="form-control" class="form-select  mb-3" asp-for="Role">
            <option value="">Please choose an option</option>
            <option value="Information Technology (IT) Staff">Information Technology (IT) Staff</option>
            <option value="Maintenance Staff">Maintenance Staff</option>
            <option value="Security ">Security </option>
            <option value="Student Services Staff">Student Services Staff</option>
            <option value="Marketing Manager">Marketing Manager</option>
        </select>
        <input type="submit" value="Add" class="form-control btn btn-success" />
    </div>
</form>